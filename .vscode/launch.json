    "version": "0.2.0",
    "configurations": [

        {
            "type": "node", // Use "pwa-node" for Node.js debugging
            "request": "launch", 
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\code-snippets\\src\\index.ts", // Path to the TypeScript file to run
