{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "tsc: build index.ts",
			"command": "tsc",
			"args": [
				"index.ts"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/code-snippets"
			},
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}